<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MyController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="root">

    <HBox>
        <TextField fx:id = "portNumber" prefHeight="100" prefWidth="600" promptText="Enter port number to begin the Server!"/>
        <Button fx:id= "connect" prefHeight="100" prefWidth="100" text="Connect" onAction="#connectMethod"/>
    </HBox>

    <ListView fx:id="listView" prefHeight="600" prefWidth="600"/>

</VBox>
